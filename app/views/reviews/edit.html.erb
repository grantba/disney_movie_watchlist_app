<% if @review.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being edited:</h2>

    <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @review, url: user_review_path(current_user.id, @review.id), method: 'patch' do |f| %>
    <%= f.label :rating, "Rating:" %> 
    <%= f.number_field :rating, placeholder: "Give this movie 1-5 stars!" %><br>
    <%= f.label :description, "Description:" %> 
    <%= f.text_field :description, placeholder: "Give this movie a review" %><br>
    <%= f.submit "Edit Review" %>
<% end %>