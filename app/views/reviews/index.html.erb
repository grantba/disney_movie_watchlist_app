<div class="review_index_page">
<h1>Your Movie Reviews</h1>
<%= link_to "Create a New Review", new_user_review_path(current_user.id) %>
</div>
<br><br>

<div id="reviews_index_links">
<% if current_user.reviews.any? %>
<% reviews_by_user.each do |review| %>
    <h2><%= link_to review.movie.Title, movie_path(review.movie.id) %></h2>
    <ul>
    <li><%= pluralize(review.rating, "Star") %> - <%= review.description %></li><br>
    <%= link_to "Edit", edit_user_review_path(current_user.id, review.id) %>  |  <%= link_to "Delete", review_path(review.id), method: 'delete', data: {confirm: "Are you sure you want to delete this review for #{review.movie.Title}?" } %><br>
    <br>
    </ul>
<% end %>
<% else %>
    <h2>You have not created any reviews yet.</h2>.
<% end %>
</div>