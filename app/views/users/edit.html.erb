<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited us from editing your account:</h2>

    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>Only update the information you wish you change.</h2>

<%= form_for(@user) do |f| %>

    <%= f.label :first_name, "First Name:" %><br>
    <%= f.text_field :first_name %><br><br>

    <%= f.label :last_name, "Last Name:" %><br>
    <%= f.text_field :last_name %><br><br>

    <%= f.label :username, "Username:" %><br>
    <%= f.text_field :username %><br><br>

    <%= f.label :email, "Email:" %><br>
    <%= f.email_field :email %><br><br>

    <%= f.label :password, "Password:" %><br>
    <%= f.password_field :password %><br><br>

    <%= f.submit "Edit Information" %>

<% end %>

<br><br><div id="delete_button"><%= button_to "Delete Account", user_path, method: 'delete' %></div>
