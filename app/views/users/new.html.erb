<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited us from creating your account:</h2>

    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@user, url: signup_path) do |f| %>

    <%= f.label :first_name, "First Name:" %><br>
    <%= f.text_field :first_name %><br><br>

    <%= f.label :last_name, "Last Name:" %><br>
    <%= f.text_field :last_name %><br><br>

    <%= f.label :username, "Username:" %><br>
    <%= f.text_field :username %><br><br>

    <%= f.label :email, "Email:" %><br>
    <%= f.email_field :email %><br><br>

    <%= f.label :password, "Password:" %><br>
    <%= f.password_field :password %><br><br>

    <%= f.submit "Sign Up" %>

<% end %>