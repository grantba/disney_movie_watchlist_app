<% if @watchlist.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@watchlist.errors.count, "error") %> must be corrected before your watchlist can be saved:</h2>

    <ul>
      <% @watchlist.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="watchlist_new_page">
<h2>Create a New Watchlist</h2>
</div>
<br>

<%= form_with model: @watchlist, url: watchlists_path do |f| %>
    <%= f.label :category_type, "Category:" %> 
    <%= f.text_field :category_type, placeholder: "Name your watchlist" %><br>
    <%= f.hidden_field :user_id, value: current_user.id %><br>
    <%= f.submit "Create Watchlist" %>
<% end %>
