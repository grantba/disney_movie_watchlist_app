<% if @watchlist && @watchlist.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@watchlist.errors.count, "error") %> must be corrected before your watchlist can be updated:</h2>

    <ul>
      <% @watchlist.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @watchlist, url: watchlist_path(@watchlist), method: 'patch' do |f| %>

    <%= render partial: 'form', locals: {f: f} %>

    <%= f.hidden_field :watchlist_id, value: @watchlist.id %>
    <%= f.submit "Update Watchlist" %>
<% end %>