<div class="watchlist_show_page">
<h1><%= @watchlist.category_type %></h1>
<%= link_to "Edit Name of Watchlist", edit_user_watchlist_path(current_user.id, @watchlist) %>
</div>

<br>
<% if @watchlist.movies.none? %>
        <h3>You have no movies in this category yet.</h3>
<% else %>
<h2>Movies in this Watchlist:</h2>
<% @watchlist.movies.each do |movie| %>
        <h3><%= link_to movie.Title, movie_path(movie) %></h3>

        <p><%= button_to "Delete this Movie from Watchlist", movie_path(movie), method: 'delete', params: { watchlist_id: @watchlist.id }, data: {confirm: "Are you sure you want to delete #{movie.Title} from this watchlist?" } %></p>
        
<% end %>
<% end %>

<br><br><div id="delete_button"><%= button_to "Delete Watchlist", user_watchlist_path(current_user.id, @watchlist), method: 'delete', data: {confirm: "Are you sure you want to delete this watchlist? If you have any movies in this watchlist and don't move them into another watchlist, you will lose them too!" } %></div>
