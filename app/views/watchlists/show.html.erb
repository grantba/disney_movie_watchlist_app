<div class="watchlist_show_page">
<h1><%= @watchlist.category_type %></h1>
<%= link_to "Edit Name of Watchlist", edit_watchlist_path(@watchlist) %>
</div>

<br>
<% if @watchlist.movies.none? %>
        <h3>You have no movies in this category yet.</h3>
        <br><h3 class="search_movie_link"><%= link_to "Search for a Movie to Add to this Watchlist", movies_path %></h3><br>
<% else %>
<h2>Movies in this Watchlist:</h2>
<% @watchlist.movies.each do |movie| %>
        <h3 class="movie_link"><%= link_to movie.Title, movie_path(movie) %></h3>

        <p><%= button_to "Delete this Movie from Watchlist", movie_path(movie), method: 'delete', params: { watchlist_id: @watchlist.id }, data: {confirm: "Are you sure you want to delete #{movie.Title} from this watchlist?" } %></p>
        
<% end %>
<br><h3 class="search_movie_link"><%= link_to "Search for Another Movie to Add to this Watchlist", movies_path %></h3><br>
<% end %>

<br><br><div id="delete_button"><%= button_to "Delete Watchlist", watchlist_path(@watchlist), method: 'delete', data: {confirm: "Are you sure you want to delete your watchlist, #{@watchlist.category_type}? If you have any movies in this watchlist and don't move them into another watchlist, you will lose them too!" } %></div>
